<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="/Content/css/admin_index_css_v1.0.css" rel="stylesheet" type="text/css" />
    <link href="/Content/js/lib/nice/jquery.validator.css" rel="stylesheet" type="text/css" />
    <link href="/Content/js/lib/DatePicker/skin/WdatePicker.css" rel="stylesheet" type="text/css" />
    <script src="/Content/Js/lib/jquery/1.8.0/jquery-1.8.0.min.js" type="text/javascript"></script>
    <script src="/Content/js/lib/nice/jquery.validator.min.js" type="text/javascript"></script>
    <script src="/Content/js/lib/nice/local/zh_CN.js" type="text/javascript"></script>
    <script src="/Content/js/lib/DatePicker/WdatePicker.js" type="text/javascript"></script>
    <script src="/Content/js/lib/BlockUI/1.0.0/BlockUI_Org.js" type="text/javascript"></script>
    <script src="/Content/Js/module/admin_common.js" type="text/javascript"></script>
    @RenderSection("Head", false)
</head>
<body>
    <div id="top_box">
        <div class="logo">后台管理</div>
        <div class="status">
            <ul>
                <li>
                    <label>用户名：@ViewBag.UserName</label>
                    @*<label class="password"><a href="/Manage/Index/ChangePwd">修改密码</a></label>*@
                    <label class="logout"><a href="javascript:void(0)" id="logout">注销</a></label>
                </li>
            </ul>
        </div>
    </div>
    <!--top_box end-->
    <div id="main_box">
        <div class="sidebar">
            <div class="sidebar_nav">
                <ul>
                    <li><a href="/Manage/ShopList">商铺管理</a></li>
                </ul>
            </div>
        </div>
        <!-- sidebar end -->
        <div id="main-content">
            @RenderBody()
        </div>
        <!-- main end -->
        <div class="clear"></div>
    </div>
    <div id="footer">
        <ul>
            <li>Copyright © 2017 All Right Reserved</li>
        </ul>
    </div>
    <link href="/Content/css/pagination.css" rel="stylesheet" type="text/css" />
    <script src="/Content/Js/lib/Pagination/1.1.2/jquery.pagination.js" type="text/javascript"></script>
    <script src="/Content/Js/json.dateHelper.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("#logout").bind("click", function () {
                logout();
            });

            $(".logo").bind("click", function () {
                window.location.href = "/manage/index";
            });
            var domainUrl = "http://" + document.domain;
            var currentUrl = window.location.href;
            var obj = $(".sidebar_nav li a[href='" + currentUrl.replace(domainUrl, "") + "']");
            obj.addClass("linked");
        });

        function logout() {
            $.ajaxPost("/manage/login/logout", {},
            function (data) {
                if (data)
                    window.location.href = '/manage/index';
                else
                    alert("操作失败！");
            }, null, null);
        }
    </script>
    @RenderSection("Js", false)
</body>
</html>
