@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head id="Head1">
    <title>管理登录</title>
    <link href="/Content/css/admin_login_css_v1.0.css" rel="stylesheet" type="text/css" />
    <script src="/Content/Js/lib/jquery/1.8.0/jquery-1.8.0.min.js" type="text/javascript"></script>
    <link href="/Content/js/lib/nice/jquery.validator.css" rel="stylesheet" type="text/css" />
    <script src="/Content/js/lib/nice/jquery.validator.min.js" type="text/javascript"></script>
    <script src="/Content/js/lib/nice/local/zh_CN.js" type="text/javascript"></script>
    <script src="/Content/js/module/admin_common.js" type="text/javascript"></script>
    <style type="text/css">
        #login-wrapper #login-content .content li {
            margin-top: 20px;
        }
    </style>
</head>
<body id="login">
    <div id="login-wrapper">
        <div id="login-top">
            <h1>管理登录</h1>
            @*<img src="/Content/images/logo.gif" width="316" height="65" alt="logo" />*@
        </div>
        <div id="login-content" style="margin-top:100px;">
            <div class="notification">
                <h3>用户登陆</h3>
            </div>
            <div class="content">
                <ul>
                    <form id="form_validate">
                        <li><label>用户名：</label><input id="uName" type="text" class="input" data-rule="用户名:required;" /></li>
                        <li><label>密　码：</label><input id="Pwd" type="password" class="input" data-rule="密码:required;" /></li>
                        <li><input type="submit" class="button" id="btnLogin" value="" /></li>
                    </form>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#form_validate').validator({
                theme: "simple_bottom",
                valid: function (form) {
                    $.ajaxPost("/manage/login/login",
                    { username: $("#uName").val(), password: $("#Pwd").val() },
                    function (data) {
                        if (data.code == 0) {
                            if ("@(ViewBag.returnUrl)" != "")
                                window.location.href = "@(ViewBag.returnUrl)";
                            else
                                window.location.href = '/manage/index';
                        }
                        else
                            alert(data.msg);
                    }, null, null);
                }
            });
        });
    </script>
</body>
</html>

