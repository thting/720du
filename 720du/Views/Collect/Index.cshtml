                        <option>美食餐饮</option>
                        <option>美食餐饮</option>
                    </select>
                </div>
                <div class="am-form-group am-form-icon">
                    联系人
                    <input value="">            </input>
                </div>
                <div class="am-form-group am-form-icon">
                    手机号码
                    <input value="">            </input>
                </div>
                <div class="am-form-group am-form-icon">
                    推荐原因
                    <textarea value=""></textarea>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
